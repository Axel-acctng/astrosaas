---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/global/Navigation.astro";

import Hero from "../components/landing/Hero.astro";
import Pricing from "../components/landing/Pricing.astro";
import Cta from "../components/global/Cta.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Axle"
  description="Accounting, Bookkeeping, Payroll, & Tax Services"
  canonical="https://www.axleaccounting.ca"
  openGraph={{
    url: "https://axleaccounting.ca/",
    title: "Axle Accounting",
    description: "Affordable Accounting, Bookkeeping, Payroll, & Tax Services",
    images: [
      {
        url: "https://www.axleaccounting.ca//public/axlelogo.png",
        width: 1200,
        height: 630,
        alt: "AA",
        type: "image/jpeg",
      },
    ],
    site_name: "Axle Accounting",
  }}
/>
<BaseLayout>
  <Navigation />
  <Hero />
  <Pricing />
  <Cta />
  <Footer />
</BaseLayout>
